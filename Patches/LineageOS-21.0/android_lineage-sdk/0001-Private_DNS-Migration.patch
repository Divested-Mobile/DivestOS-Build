+                            ConnectivitySettingsManager.PRIVATE_DNS_MODE_PROVIDER_HOSTNAME);
+            } else if ("appliedprivacy".equals(currentPrivateDnsMode)) {
+                ConnectivitySettingsManager.setPrivateDnsHostname(mContext, "dot1.applied-privacy.net");
